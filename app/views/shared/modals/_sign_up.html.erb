<script id="sign-up-modal-template" type="text/x-handlebars-template">
  <div class="modal-wrapper sign-up-modal">
    <div class="modal-block">
      {{#unless inescapable}}
        <a class="close-modal"><i class="icon-cancel"></i></a>
      {{/unless}}

      <%= form_tag user_registration_path(format: :json), {"data-post-sign-up-path" => post_sign_in_modal_path} do |f| %>
        <h4>Create an account</h4>
        <div>Creating an account allows you to save your work and complete your order</div>

        <div class="errors"></div>

        <%= text_field_tag "user[email]", nil, placeholder: "Email Address", autofocus: true %>
        <%= text_field_tag "user[full_name]", nil, placeholder: "Full Name" %>
        <%= password_field_tag "user[password]", nil, placeholder: "Password" %>
        <%= password_field_tag "user[password_confirmation]", nil, placeholder: "Password Confirmation" %>

        <input type="checkbox" id="user_accept_terms">
        <label for="user_accept_terms" id="user_accept_terms_label">I accept the <%= link_to "terms of service", terms_page_path, target: "_new" %></label>

        <button class="submit">Sign Up</button>

        <div class="devise-links">
          <a class="sign-in" href="#">Already have an account?</a>
        </div>
      <% end %>
    </div>
  </div>
</script>
