<script id="sign-up-modal-template" type="text/x-handlebars-template">
  <div class="modal-wrapper">
    <div class="modal-block">
      <h1>Sign Up</h1>

      <div class="errors"></div>

      <%= form_tag user_registration_path(format: :json), {"data-post-sign-up-path" => post_sign_up_modal_path} do |f| %>
        <p>
          <%= label_tag :user_email, "Email address" %>
          <br>
          <%= text_field_tag "user[email]"  %>
        </p>

        <p>
          <%= label_tag :user_password, "Password" %>
          <br>
          <%= password_field_tag "user[password]" %>
        </p>

        <p>
          <%= label_tag :user_password_confirmation, "Password confirmation" %>
          <br>
          <%= password_field_tag "user[password_confirmation]" %>
        </p>

        <button class="submit">Sign Up</button>
      <% end %>
    </div>
  </div>
</script>
